{
  "name": "letterboxd-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd letterboxd-frontend && eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:backend": "cd letterboxd-backend && eslint src --ext .ts,.js",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:fix:frontend": "cd letterboxd-frontend && eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "lint:fix:backend": "cd letterboxd-backend && eslint src --ext .ts,.js --fix",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "format:frontend": "cd letterboxd-frontend && prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
    "format:backend": "cd letterboxd-backend && prettier --write 'src/**/*.{ts,js,json}'",
    "format": "npm run format:frontend && npm run format:backend",
    "format:check:frontend": "cd letterboxd-frontend && prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
    "format:check:backend": "cd letterboxd-backend && prettier --check 'src/**/*.{ts,js,json}'",
    "format:check": "npm run format:check:frontend && npm run format:check:backend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "letterboxd-frontend/src/**/*.{ts,tsx,js,jsx}": [
      "cd letterboxd-frontend && eslint --fix src --ext .ts,.tsx,.js,.jsx",
      "cd letterboxd-frontend && prettier --write src",
      "git add"
    ],
    "letterboxd-backend/src/**/*.{ts,js}": [
      "cd letterboxd-backend && eslint --fix src --ext .ts,.js",
      "cd letterboxd-backend && prettier --write src",
      "git add"
    ]
  }
}
